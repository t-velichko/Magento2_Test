<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer.icons.pay" template="Magento_Theme::html/pay-icons.phtml" after="form.subscribe">
                <block class="Magento\Cms\Block\Block" name="cms.pay.icons">
                    <arguments>
                        <argument name="block_id" xsi:type="string">pay_icons</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>